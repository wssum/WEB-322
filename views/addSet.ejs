<html>
<head>
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <title>Add Set</title>
</head>
    <body>
<%- include('partials/navbar', {page: '/lego/addSet' }) %>
<form action="/lego/addSet" method="post">
   <input id = "name" name = "name" required = "true" type = "text" placeholder="Set name" class="input input-bordered w-full max-w-xs" />
   <input id = "year" name = "year" required = "true" type = "number" placeholder="Year" class="input input-bordered w-full max-w-xs" />
   <input id = "num_parts" name = "num_parts" required = "true" type="number" placeholder="number of parts" class="input input-bordered w-full max-w-xs" />
   <input id = "img_url" name = "img_url" required = "true" type="url" placeholder="Picture in URL form" class="input input-bordered w-full max-w-xs" />
   <input id = "set_num" name="set_num" required = "true" type="text" placeholder="Set Number" class="input input-bordered w-full max-w-xs" />
   <select id = "theme_id" name = "theme_id" class="select w-full max-w-xs">
       <option >Choose Theme</option>
       <% themes.forEach(theme=>{ %>
           <option value="<%= theme.id %>">
           <%= theme.name %>
           </option>
           <% }) %>
     </select>
     <button type = "submit" class = "homeNav navbar bg-neutral text-neutral-content btn btn-ghost normal-case text-xl">Add set</button>
</form>
    </body>
</html>