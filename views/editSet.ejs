<html>
<head>
    <link rel="stylesheet" type="text/css" href="/css/main.css">
    <title><%= set.name %></title>
</head>
    <body>
        <%- include('partials/navbar', {page: '' }) %>
<form action="/lego/editSet" method="post">
   <input id = "name" name = "name" value="<%= set.name %>"required = "true" type = "text" placeholder="Set name" class="input input-bordered w-full max-w-xs" />
   <input id = "year" name = "year" value="<%= set.year %>"required = "true" type = "number" placeholder="Year" class="input input-bordered w-full max-w-xs" />
   <input id = "num_parts" name = "num_parts" value="<%= set.num_parts %>"required = "true" type="number" placeholder="number of parts" class="input input-bordered w-full max-w-xs" />
   <input id = "img_url" name = "img_url" value="<%= set.img_url %>" required = "true" type="url" placeholder="Picture in URL form" class="input input-bordered w-full max-w-xs" />
   <input id = "set_num" name="set_num" value="<%= set.set_num %>"required = "true" type="text" placeholder="Set Number" class="input input-bordered w-full max-w-xs" readonly/>
   <select id = "theme_id" name = "theme_id" value="<%= set.theme_id %>" class="select w-full max-w-xs">
       <option >Choose Theme</option>
       <% themes.forEach(theme=>{ %>
        <option <%= (set.theme_id == theme.id) ? "selected" : "" %> value="<%= theme.id %>">
        <%= theme.name %>
        </option>
        <% }) %>
     </select>
     <a class="btn btn-ghost normal-case text-xl" href="/lego/deleteSet/<%=set.set_num %>" >Delete this set</a>
     <button type = "submit" class = "homeNav navbar bg-neutral text-neutral-content btn btn-ghost normal-case text-xl">Update Set</button>
</form>
    </body>
</html>

